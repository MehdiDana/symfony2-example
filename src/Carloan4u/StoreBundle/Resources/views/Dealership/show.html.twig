<h1>Dealership</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>{{ entity.address }}</td>
        </tr>
        <tr>
            <th>Opening_hours</th>
            <td>{{ entity.openinghours }}</td>
        </tr>
        <tr>
            <th>Number_of_car</th>
            <td>{{ entity.numberofcar }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <th><img src="{{ entity.image }}" width="200px" /></th>
        </tr>
        <tr>
            <th>Approved</th>
            <td>{{ entity.approved }}</td>
        </tr>
    </tbody>
</table>
Average: {{ average }}
<br>
{% for entity_review in entity_reviews %}
reviews: {{ entity_review.name }} gives {{ entity_review.rate }}
    <br>
{% endfor %}

<ul class="record_actions">
    <li>
        <a href="{{ path('dealership') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('dealership_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('dealership_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
